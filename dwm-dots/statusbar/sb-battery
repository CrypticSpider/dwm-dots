#!/bin/sh

battery=$(cat /sys/class/power_supply/BAT0/capacity 2>/dev/null)
status=$(cat /sys/class/power_supply/BAT0/status 2>/dev/null)

if [ -z "$battery" ] || [ -z "$status" ]; then
    echo "Battery info unavailable"
    exit 1
fi

if [ "$status" = "Charging" ]; then
    echo "ğŸ”Œ $battery%"
else
    echo "ğŸ”‹ $battery%"
fi
